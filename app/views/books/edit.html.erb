<%= form_with model:@book, local: true do |f| %>
  <div class="item">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="item">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>
  <div class="item">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

